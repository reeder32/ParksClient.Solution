@{
  Layout = "_Layout";
}
@model List<ParksClient.Models.Park>
@using ParksClient.Models

<h1>All Parks:</h1>

<ul>
  @foreach (Park p in Model)
  {
    <h4>@Html.ActionLink($"{@p.Name}", "Details", new {id = @p.ParkId}) </h4>

    <p><em>State </em> @Html.ActionLink($"{@p.State}", "Index", new {state = @p.State})</p>
    <p><em>City </em> @Html.ActionLink($"{@p.City}", "Index", new {city = @p.City})</p>
    <p><em>Zip Code </em>@p.ZipCode</p>
    <p><em>Type: </em> @Html.ActionLink($"{@p.Type}", "Index", new {type = @p.Type})</p>
    <hr />
  }
</ul>